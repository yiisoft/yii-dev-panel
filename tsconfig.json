{
  "compilerOptions": {
    "target": "ESNext",
    "noErrorTruncation": false,
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "types": [
      "vite/client",
      "vite-plugin-svgr/client",
      "vite-plugin-pwa/info",
      "vite-plugin-pwa/react"
    ],
    "paths": {
      "@yiisoft/yii-dev-panel/*": [
        "packages/yii-dev-panel/src/*"
      ],
      "@yiisoft/yii-dev-panel-sdk/*": [
        "packages/yii-dev-panel-sdk/src/*"
      ],
      "@yiisoft/yii-dev-toolbar/*": [
        "packages/yii-dev-toolbar/src/*"
      ]
    },
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
    ]
  },
  "exclude": [
    "**/.*/",
    "**/build",
    "**/node_modules"
  ]
}
